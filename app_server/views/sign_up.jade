extends layout

block content
  link(rel='stylesheet', href='/stylesheets/sign_up.css')
  .header
    .logo-icon üç≥
    .brand-text Smart Recipe Generator
  
  .container
    .left-section
      .illustration
        .illustration-icon üë©‚Äçüç≥
        h2 Start Your Culinary Journey!
        p Join thousands of home chefs who are discovering amazing recipes tailored to their tastes and ingredients. Create your chef profile and unlock personalized cooking experiences!
    
    .right-section
      .form-header
        h1 Create Account
        p Join our community of passionate home chefs
      
      form#signupForm
        .form-row
          .form-group
            label(for="firstName") First Name
            input(type="text", id="firstName", name="firstName", placeholder="Enter your first name", required)
            .error-message#firstNameError
          .form-group
            label(for="lastName") Last Name
            input(type="text", id="lastName", name="lastName", placeholder="Enter your last name", required)
            .error-message#lastNameError
        
        .form-group
          label(for="email") Email Address
          input(type="email", id="email", name="email", placeholder="Enter your email address", required)
          .error-message#emailError
        
        .form-group
          label(for="password") Password
          input(type="password", id="password", name="password", placeholder="Create a strong password", required)
          .error-message#passwordError
        
        .form-group
          label(for="confirmPassword") Confirm Password
          input(type="password", id="confirmPassword", name="confirmPassword", placeholder="Confirm your password", required)
          .error-message#confirmPasswordError
        
        .form-group
          label(for="skillLevel") Cooking Skill Level
          select(id="skillLevel", name="skillLevel", required)
            option(value="") Select your skill level
            option(value="beginner") Beginner - Just starting out
            option(value="intermediate") Intermediate - Some experience
            option(value="advanced") Advanced - Very experienced
            option(value="professional") Professional Chef
          .error-message#skillLevelError
        
        .form-options
          .show-password
            input(type="checkbox", id="showPassword", name="showPassword")
            label(for="showPassword") Show passwords
          a(href="#").terms-link Terms & Privacy
        
        button(type="submit").sign-up-btn Create My Chef Profile
        .success-message#successMessage Account created successfully!
      
      .divider
        span Or sign up with
      
      .social-login
        button.social-btn(type="button")
          span üìß
          | Google
        button.social-btn(type="button")
          span üìò
          | Facebook
      
      .signin-link
        | Already have an account? 
        a(href="/signin") Sign in here

  script(src='/javascripts/sign_up.js')