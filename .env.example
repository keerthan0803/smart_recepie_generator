# Copy this file to .env and fill in your secrets
# Never commit your real .env file to version control

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key

# Gemini model configuration
# Primary model to use and alternates (comma-separated) for fallback
GEMINI_MODEL=gemini-1.5-pro
GEMINI_ALT_MODELS=gemini-1.5-flash

# MongoDB Connection (Atlas Cloud)
MONGODB_URI=your-mongodb-atlas-uri

# Local MongoDB (fallback)
MONGODB_LOCAL=mongodb://localhost:27017/smart-recipe-generator

# App Base URL (used in email links)
BASE_URL=http://localhost:3000

# SMTP configuration for sending emails (either set SMTP_* or MAIL_* or EMAIL_*)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your-smtp-password-or-app-password
MAIL_HOST=
MAIL_PORT=
MAIL_USER=
MAIL_PASS=
EMAIL_USER=
EMAIL_PASS=
MAIL_FROM="Smart Recipe Generator <no-reply@example.com>"

# Stripe payments (Checkout)
# Secret key from Stripe Dashboard (test or live)
STRIPE_SECRET_KEY=sk_test_xxx
# Webhook signing secret (from Stripe CLI or Dashboard webhook config)
STRIPE_WEBHOOK_SECRET=whsec_xxx
# Price IDs for credit packs (create in Stripe Dashboard; currency set on the Price)
STRIPE_PRICE_20=price_xxx_20
STRIPE_PRICE_60=price_xxx_60
STRIPE_PRICE_150=price_xxx_150
